<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/slotSelect_row_margin"
        android:layout_marginBottom="@dimen/slotSelect_row_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/slot_select_title_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slot"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/slotSelect_row_textview_marginLeft"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginRight="@dimen/list_row_slot_timings_day_margin_right"/>
        <CheckBox
            android:id="@+id/slot_select_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_gravity="center_vertical|end"
            app:theme="@style/MyCheckBox"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

</FrameLayout>