<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:layout_height="@dimen/list_row_cardview_height"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="1dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/slot_imageview"
            android:layout_width="@dimen/list_row_logo_dimension"
            android:layout_height="@dimen/list_row_logo_dimension"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/list_row_imageview_margin_left"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_row_cardview_height"
            android:layout_marginLeft="@dimen/list_row_slot_margin_left"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:id="@+id/slot_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1.8"
                android:textColor="@android:color/black"
                android:textSize="@dimen/list_row_textsize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:layout_marginRight="@dimen/list_row_slot_timings_margin_right"
                android:layout_marginLeft="@dimen/list_row_slot_timings_margin_left"
                android:layout_marginTop="@dimen/list_row_slot_timings_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/slot_day1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_row_slot_timings_textsize"
                    android:layout_marginRight="@dimen/list_row_slot_timings_day_margin_right"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/slot_day1_time"
                    android:textSize="@dimen/list_row_slot_timings_textsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/slot2_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:layout_marginRight="@dimen/list_row_slot_timings_margin_right"
                    android:layout_marginLeft="@dimen/list_row_slot_timings_margin_left"
                    android:orientation="horizontal">

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/slot_day2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_row_slot_timings_textsize"
                    android:layout_marginRight="@dimen/list_row_slot_timings_day_margin_right"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/slot_day2_time"
                    android:textSize="@dimen/list_row_slot_timings_textsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>

    </LinearLayout>

</FrameLayout>